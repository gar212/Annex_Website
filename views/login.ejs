<% include ./partials/header %> 


<div class="container">
    <div class="formContainer col-xs-12 col-md-6">
            <h1>Log in to continue</h1>
            <div class="loginForm col-xs-12 col-md-6">
            <form action="/login" method="POST" class="">
                <div class="form-group">
                    <label for="username">Username: </label>
                    <input id="username" class="form-control" type="text" name="username" placeholder="">
                </div>
                <div class="form-group">
                    <label for="password">Password: </label>
                    <input class="form-control" type="password" name="password" placeholder="">
                </div>
        
                <div class="form-group">
                    <button class="btn btn-lg btn-primary col-xs-4">Login</button>
                </div>
            </form>
        </div>
    </div>

        <div class="formContainer col-xs-12 col-md-6">
        <h1>Don't have an account?</h1>
        <div class="loginForm col-xs-12 col-md-6">
            <div class="form-group">
               <a href="/register"><button class="btn btn-lg btn-danger">Create an account</button></a> 
            </div>
                <p>It's easy. We only need a name and password.</p>
    </div>
 </div>
</div>


