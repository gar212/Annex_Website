<% include ../partials/header %>
<div class="container">
    <h1 style="justify-content-md-center">Edit: <%= location.name %></h1>
        <div class="row col-md-7 col-xs-12">
            <div class="loginForm col-xs-12 col-md-7">
                <form action="/locations/<%= location._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="location[name]">Title: </label>
                        <input class="form-control" type="text" name="location[name]" value="<%= location.name %>">
                    </div>
                    <div class="form-group">
                        <label for="location[price]">Price: </label>                        
                        <input class="form-control" type="number" name="location[price]" value="<%= location.price %>" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                         <label for="location[name]">Image Url: </label>                       
                        <input class="form-control" type="text" name="location[image]" value="<%= location.image %>">
                    </div>
                    <div class="form-group">
                         <label for="location[name]">Description: </label>                       
                        <input class="form-control" type="text" name="location[description]" value="<%= location.description %>">
                    </div>
                    <div class="form-group">
                        <label for="location[location]">Address: </label>                        
                        <input class="form-control" type="text" name="location[location]" id="location" value="<%= location.location %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/locations">Go Back</a>
            </div>
        </div>
</div>
<% include ../partials/footer %>

